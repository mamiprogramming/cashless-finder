<main class="main">
  <div class="inner">
    <div class="form-wrapper">
      <h1 class="page-heading">ライヴ会場キャッシュレス対応情報</h1><br />
      <% if user_signed_in? %>
        <div class="greeting">
        こんにちは、
        <%= link_to "#{current_user.user_name}さん", user_path(current_user), class: :greeting__link %>
        </div>
      <% end %>
    </div>
    <%= form_with(url: search_venues_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "会場を検索する", class: "search-input" %>
    <%= form.submit "Search", class: "search-btn" %>
    <% end %>
    <%= render partial: 'venue', collection: @venue %>
  </div>
</main>